# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

########## SITE ###########

GET			/																		controllers.Application.index()
GET			/signup															controllers.Application.signup()
GET			/play																controllers.Application.goPlay()

########## API ###########

GET			/api/me															controllers.api.Me.show()
POST		/api/login													controllers.api.Me.login()
POST		/api/logout													controllers.api.Me.logout()
POST		/api/signup													controllers.api.Me.signup()
POST		/api/checkUsername/:username				controllers.api.Me.checkUsername(username: String)
POST		/api/checkEmail/:email							controllers.api.Me.checkEmail(email: String)

GET			/api/user/all												controllers.api.Users.list()
GET			/api/user/:id												controllers.api.Users.show(id: Long)
PUT			/api/user/:id												controllers.api.Users.update(id: Long)
DELETE	/api/user/:id												controllers.api.Users.delete(id: Long)
POST		/api/user														controllers.api.Users.add()

GET			/api/object/all											controllers.api.Objects.list()
GET			/api/object/:id											controllers.api.Objects.show(id: Long)
PUT			/api/object/:id											controllers.api.Objects.update(id: Long)
DELETE	/api/object/:id											controllers.api.Objects.delete(id: Long)
POST		/api/object													controllers.api.Objects.add()

GET			/api/news/all												controllers.api.News.list()
GET			/api/news/:id												controllers.api.News.show(id: Long)
PUT			/api/news/:id												controllers.api.News.update(id: Long)
DELETE	/api/news/:id												controllers.api.News.delete(id: Long)
POST		/api/news														controllers.api.News.add()

GET			/api/game/environment/all						controllers.api.game.Environments.list()
GET			/api/game/environment/root					controllers.api.game.Environments.root()
GET			/api/game/environment/:id						controllers.api.game.Environments.show(id: Long)

GET			/api/game/gametoken/:mapId					controllers.api.game.GameTokens.create(mapId: Long)

GET			/api/game/geometry/all							controllers.api.game.Geometries.list()
GET			/api/game/geometry/env/:id					controllers.api.game.Geometries.showByEnv(id: Long)
GET			/api/game/geometry/unit/:id					controllers.api.game.Geometries.showByUnit(id: Long)
GET			/api/game/geometry/tower/:id				controllers.api.game.Geometries.showByTower(id: Long)
GET			/api/game/geometry/:id							controllers.api.game.Geometries.show(id: Long)
PUT			/api/game/geometry/:id							controllers.api.game.Geometries.update(id: Long)
DELETE	/api/game/geometry/:id							controllers.api.game.Geometries.delete(id: Long)
POST		/api/game/geometry									controllers.api.game.Geometries.add()

GET			/api/game/map/all										controllers.api.game.Maps.list()
GET			/api/game/map/:id										controllers.api.game.Maps.show(id: Long)
PUT			/api/game/map/:id										controllers.api.game.Maps.update(id: Long)
DELETE	/api/game/map/:id										controllers.api.game.Maps.delete(id: Long)
POST		/api/game/map												controllers.api.game.Maps.add()

GET			/api/game/player/:id								controllers.api.game.Players.show(id: Long)
GET			/api/game/player/:id/settings				controllers.api.game.Players.showSettings(id: Long)

GET			/api/game/terrain/all								controllers.api.game.Terrains.list()
GET			/api/game/terrain/:id								controllers.api.game.Terrains.show(id: Long)
PUT			/api/game/terrain/:id								controllers.api.game.Terrains.update(id: Long)
DELETE	/api/game/terrain/:id								controllers.api.game.Terrains.delete(id: Long)
POST		/api/game/terrain										controllers.api.game.Terrains.add()

GET			/api/game/tower/all									controllers.api.game.Towers.list()
GET			/api/game/tower/:id									controllers.api.game.Towers.show(id: Long)
PUT			/api/game/tower/:id									controllers.api.game.Towers.update(id: Long)
DELETE	/api/game/tower/:id									controllers.api.game.Towers.delete(id: Long)
POST		/api/game/tower											controllers.api.game.Towers.add()

GET			/api/game/unit/all									controllers.api.game.Units.list()
GET			/api/game/unit/root									controllers.api.game.Units.root()
GET			/api/game/unit/:id									controllers.api.game.Units.show(id: Long)

GET			/api/editor/map/default							controllers.api.Editor.mapDefault()
GET			/api/editor/map/:id									controllers.api.Editor.mapShow(id: Long)
POST		/api/editor/map											controllers.api.Editor.addMap()

GET			/api/editor/environment/:id					controllers.api.Editor.envShow(id: Long)

########## GAME ###########

GET			/game																controllers.Game.index()
GET			/test																controllers.Game.test()

########## EDITOR ###########

GET			/editor															controllers.Editor.index()
GET			/viewer															controllers.Editor.viewer()

########## ADMIN ###########

GET			/admin															controllers.Admin.index()
GET			/admin/user/all											controllers.Admin.userAll()
GET			/admin/user/:id											controllers.Admin.userShow(id: Long)

GET			/admin/map/all											controllers.Admin.mapAll()
GET			/admin/map/new											controllers.Admin.mapNew()
GET			/admin/map/:id											controllers.Admin.mapShow(id: Long)

GET			/admin/object/all										controllers.Admin.objectAll()
GET			/admin/object/new										controllers.Admin.objectNew()
GET			/admin/object/:id										controllers.Admin.objectShow(id: Long)

GET			/admin/news/all											controllers.Admin.newsAll()
GET			/admin/news/new											controllers.Admin.newsNew()
GET			/admin/news/:id											controllers.Admin.newsShow(id: Long)


########## OTHER ###########

GET     /assets/*file												controllers.Assets.at(path="/public", file)
