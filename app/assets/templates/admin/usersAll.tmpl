<div class="container data-table">
	<div class="headline">
		<h2>Users</h2>
		{{#if isFetched}}
			<img src="/assets/images/loader.gif" />
		{{/if}}
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Username</th>
				<th>Email</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{{#each []}}
				<tr>
					<th>{{id}}</th>
					<th>{{username}}</th>
					<th>{{email}}</th>
					<th></th>
				</tr>
			{{/each}}		
		</tbody>
	</table>
</div>

<footer class="footer" data-view="views/footer"></footer>