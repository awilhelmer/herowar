{{#unless id}}
	<div class="loading"></div>
{{else}}
	{{#each children}}
		<div class="item level-one"><span>{{name}}</span></div>
		{{#if children}}
			{{#each children}}
				<div class="item level-two"><span>{{name}}</span></div>
				{{#if children}}
					{{#each children}}
						<div class="item level-three"><span>{{name}}</span></div>
					{{/each}}
				{{/if}}
			{{/each}}
		{{/if}}
	{{/each}}
{{/unless}}