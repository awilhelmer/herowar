<div class="sidebar-panel-headline">Object Properties</div>
<div class="sidebar-panel-content">
	<ul class="nav nav-tabs">
		<li class="active"><a href="#op-basis" data-toggle="tab">Basis</a>
		<li><a href="#op-coords" data-toggle="tab">Coords.</a>
	</ul>
	<div class="tab-content">
		<div class="tab-pane active" id="op-basis">
			<div class="sidebar-headline">Basis Settings</div>
			<div>
				<form class="form-horizontal">
					<div class="control-group">
						<label class="control-label" for="inputId">ID</label>
						<div class="controls">
							<input type="text" id="inputId" class="input-medium" name="id" value="{{id}}" disabled>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="inputName">Name</label>
						<div class="controls">
							<input type="text" id="inputName" class="input-medium" name="name" value="{{name}}" disabled>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="inputVisible">Visible</label>
						<div class="controls">
							<input type="checkbox" id="inputVisible" name="visible" value="true">
						</div>
					</div>
				</form>
			</div>
		</div>
		<div class="tab-pane" id="op-coords">
			<div class="sidebar-headline">Coordinates</div>
			<div>
				<form class="form-horizontal">
					<div class="control-group">
						<label class="control-label" for="inputPosX">P.X</label>
						<div class="controls">
							<input type="text" id="inputPosX" name="posX" class="input-mini">
						</div>
						<label class="control-label" for="inputPosY">P.Y</label>
						<div class="controls">
							<input type="text" id="inputPosY" name="posY" class="input-mini">
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="inputScaleX">S.X</label>
						<div class="controls">
							<input type="text" id="inputScaleX" name="scaleX" class="input-mini">
						</div>
						<label class="control-label" for="inputScaleY">S.Y</label>
						<div class="controls">
							<input type="text" id="inputScaleY" name="scaleY" class="input-mini">
						</div>
						<label class="control-label" for="inputScaleZ">S.Z</label>
						<div class="controls">
							<input type="text" id="inputScaleZ" name="scaleZ" class="input-mini">
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="inputRotH">R.H</label>
						<div class="controls">
							<input type="text" id="inputRotH" name="rotH" class="input-mini">
						</div>
						<label class="control-label" for="inputRotP">R.P</label>
						<div class="controls">
							<input type="text" id="inputRotP" name="rotP" class="input-mini">
						</div>
						<label class="control-label" for="inputRotB">R.B</label>
						<div class="controls">
							<input type="text" id="inputRotB" name="rotB" class="input-mini">
						</div>
					</div>
				</form>			
			</div>
		</div>
	</div>
</div>